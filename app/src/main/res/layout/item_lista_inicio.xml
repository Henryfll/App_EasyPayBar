<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
            android:id="@+id/img_proveedor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/altura_miniatura_comida"
            android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">

        <Switch
            android:id="@+id/Switch_afiliacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:checked="false"
            android:text="AfiliaciÃ³n:"
            android:textOff="No"
            android:textOn="Si"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/txt_bar"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_gravity="left|top"
            android:layout_marginBottom="32dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/espacio_norma_1"
            android:text="Large Text"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/txt_nombre"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_gravity="left|top"
            android:layout_marginBottom="32dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/espacio_norma_1"
            android:text="Large Text"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btn_ver"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="Ver" />


    </LinearLayout>
</RelativeLayout>